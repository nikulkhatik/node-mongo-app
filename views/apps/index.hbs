<h1>Apps</h1>

<div class="row">
    {{#each apps}}
    <di class="col s12 m4">
        <div class="card">
            <div class="card-image">
                {{{editIcon user ../user _id}}}
            </div>
            <div class="card-content center-align">
                <h5>{{title}}</h5>
                <p>{{stripTags (truncate body 150) }}</p>
                <br>
                <div class="chip">
                    <img src="{{user.image}}" alt="">
                    <a href="/apps/user/{{user._id}}">{{user.displayName}}</a>
                </div>
            </div>
            <div class="card-action center-align">
                <a href="/apps/{{_id}}" class="btn grey">Read More</a>
            </div>
        </div>
    </di>
    {{else}}
    <p>No apps to display</p>
    {{/each}}
</div>