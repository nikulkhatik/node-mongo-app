<h3>Edit App</h3>
<form action="/apps/{{apps._id}}" method="POST" class="col s12">
    <input type="hidden" name="_method" value="PUT">
    <div class="row">
        <div class="input-field">
            <input id="title" type="text" name="title" value="{{apps.title}}">
            <label for="title">Title</label>
        </div>
    </div>
    <div class="row">
        <div class="input-field">
            <select id="status" name="status">
                {{#select apps.status}}
                <option value="public" selected>Public</option>
                <option value="private">Private</option>
                {{/select}}
            </select>
            <label>Status</label>
        </div>
    </div>
    <div class="row">
        <div class="input-field">
            <h5>Tell Us Your App:</h5>
            <textarea id="body" name="body">{{apps.body}}</textarea>
        </div>
    </div>
    <div class="row">
        <input type="submit" class="btn" value="Save">
        <a href="/dashboard" class="btn orange">Cancel</a>
    </div>
</form>